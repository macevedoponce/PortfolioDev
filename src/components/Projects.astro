---
import GitHub from "./icons/GitHub.astro"
import Php from "./icons/Php.astro"
import Android from "./icons/Android.astro"
import Java from "./icons/Java.astro"
import Mysql from "./icons/Mysql.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import NextJS from "./icons/NextJS.astro"

const TAGS = {
  PHP: {
    name: "Php",
    class: "bg-black text-white",
    icon: Php,
  },
  JAVA: {
    name: "Java",
    class: "bg-black text-white",
    icon: Java,
  },
  ANDROID: {
    name: "Android Studio",
    class: "bg-black text-white",
    icon: Android,
  },
  MYSQL: {
    name: "MySql",
    class: "bg-black text-white",
    icon: Mysql,
  },
  NODEJS: {
    name: "Node JS",
    class: "bg-black text-white",
    icon: NextJS,
  },
}
const PROJECTS = [
  {
    title: "EduConnect APP",
    description:
      "EduConnect es una aplicación android que tiene la finalidad de ayudar a docentes en el proceso de retroalimentación academica, además de mejorar el rendimiento academico en los estudiantes.",
    link: "https://www.figma.com/file/I3cv6pfhmjF4TDcQbzgiSz/EduConnect?type=design&node-id=35%3A4&mode=design&t=n0jocElTOMWvclTc-1",
    github: "https://github.com/macevedoponce/edoconnect",
    image: "/projects/educonnect_banner.png",
    tags: [TAGS.ANDROID, TAGS.JAVA, TAGS.MYSQL, TAGS.PHP],
  },
  {
    title: "Ruta de Experiencia Universidad Continental App",
    description:
      "El proyecto Ruta de Experiencia UC se enfocó en la construcción de un sistema integral compuesto por tres módulos principales: Web Cliente, Web Administrador y App Móvil. Su finalidad primordial fue mostrar y gestionar las experiencias disponibles en la Universidad Continental.",
    link: "https://www.figma.com/file/WE1fCn1xC1kT4rMNGEc3NH/Ruta-Experiencia-UC?type=design&node-id=0%3A1&mode=design&t=oXYdyZjtMYqV7JSN-1",
    image: "/projects/ruta_experiencia_uc_banner.png",
    github: "https://github.com/macevedoponce/Proyectos_II_moviles/tree/acevedo",
    tags: [TAGS.ANDROID, TAGS.JAVA, TAGS.NODEJS],
  },
  {
    title: "MediApp",
    description:
      "Mediapp es una aplicación para Android desarrollada en el curso de soluciones móviles en la universidad continental. Cuenta con funcionalidades tanto para el cliente, repartidor y propietario.",
    link: "https://www.figma.com/file/cITQ2uYgOeEev259u60znf/MediApp?type=design&node-id=0%3A1&mode=design&t=nLT6x5eXz1Q6abV3-1",
    image: "/projects/Mediapp banner.png",
    github: "https://github.com/macevedoponce/MediApp-Cliente-Repartidor",
    tags: [TAGS.ANDROID, TAGS.JAVA, TAGS.MYSQL, TAGS.PHP],
  },
  {
    title: "Estudiando",
    description:
      "Estudiando es una App para Android desarrollada en el curso PROYECTOS I en la Universidad continental, con el objetivo de mejorar el rendimiento académico de los estudiantes de secundaria.",
    link: "#",
    image: "/projects/estudiando_banner.png",
    github: "https://github.com/macevedoponce/estudiandoApp",
    tags: [TAGS.ANDROID, TAGS.JAVA, TAGS.MYSQL, TAGS.PHP],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
              <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Figma
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



